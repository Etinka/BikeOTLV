<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/splashscreen</item>

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="SplashTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.Default" parent="@android:style/Theme"></style>

    <style name="Theme.NoTitle" parent="@android:style/Theme.NoTitleBar"></style>

    <style name="Theme.FullScreen" parent="@android:style/Theme.NoTitleBar.Fullscreen"></style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">10sp</item>
    </style>
    <!-- the theme applied to the application or activity -->

    <style name="Theme.Bikeo" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_bikeo</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Bikeo</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Bikeo</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Bikeo</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Bikeo</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Bikeo</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_bikeo</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_bikeo</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Bikeo</item>
        <item name="android:actionMenuTextColor">@color/dark_gray</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
    </style>

    <style name="ActionBar.Solid.Bikeo" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_bikeo</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_bikeo</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_bikeo</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Bikeo</item>
    </style>

    <style name="ActionBar.Transparent.Bikeo" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_bikeo</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Bikeo</item>
    </style>

    <style name="PopupMenu.Bikeo" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_bikeo</item>
    </style>

    <style name="DropDownListView.Bikeo" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_bikeo</item>
    </style>

    <style name="ActionBarTabStyle.Bikeo" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_bikeo</item>
    </style>

    <style name="DropDownNav.Bikeo" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_bikeo</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_bikeo</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_bikeo</item>
    </style>

    <style name="ProgressBar.Bikeo" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_bikeo</item>
    </style>

    <style name="ActionButton.CloseMode.Bikeo" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_bikeo</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Bikeo.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Bikeo</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Bikeo</item>
    </style>

    <style name="MyActionBarTabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/dark_gray</item>
                <item name="android:textSize">@dimen/tab_txt_size</item>
        
    </style>
