<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_gray"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/avalBikes"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/alert_title_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/title"
        android:layout_below="@id/title"
        android:layout_marginTop="15dp"
        android:text="@string/availablePoles"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/alert_txt_size" />

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/positive_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:text="@string/ok"
            android:textColor="@color/green_button_text"
            android:textSize="@dimen/alert_btn_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/negative_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:text="@string/cancel"
            android:textColor="@color/gray_button__text"
            android:textSize="@dimen/alert_btn_size" />
    </LinearLayout>

</RelativeLayout>